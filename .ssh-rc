
defn sad ssh-add
defn sal ssh-add -L
defn sall ssh-add -l
defn skg ssh-keygen
defn slf ssh-keygen -lf
defn slm ssh-keygen -l -E md5 -f

export GPG_TTY=$(tty)

port_forward() {
  if [ $# -lt 2 ]; then
    echo "Usage: $0 <host> <port>" >&2
    return 1
  fi
  host="$1"
  shift
  port="$1"
  shift
  ssh "$@" -N -L "localhost:$port:localhost:$port" "$host"
}
export -f port_forward
defn pfw port_forward
